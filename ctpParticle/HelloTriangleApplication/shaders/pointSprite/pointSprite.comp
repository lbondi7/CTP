bool isInside(vec3 pos, vec3 min, vec3 max)
{
    if((pos.x <= max.x && pos.x >= min.x) &&
    (pos.y <= max.y && pos.y >= min.y) &&
    (pos.z <= max.z && pos.z >= min.z))
        return true;

    return false;
}



vec3 FindPoint(Triangle tri)
{
	float u = ubp.randomVec.x;
	float v = ubp.randomVec.y;

	if (u + v >= 1.0f)
	{
		u = 1.0f - u;
		v = 1.0f - v;
	}

	return tri.vertices[0].xyz + (u * tri.edges[0].xyz) + (v * tri.other_edge.xyz);
}

